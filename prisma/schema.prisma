generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Carousel {
  id                  Int              @id @default(autoincrement())
  title               String
  description         String
  images              CarouselImage[]
  created_at          DateTime         @default(now())
  updated_at          DateTime         @default(now()) @updatedAt
  status              String           @default("draft")
  product_category    ProductCategory? @relation(fields: [product_category_id], references: [id], onDelete: Cascade)
  product_category_id Int?

  @@map("carousel")
}

model CarouselImage {
  id             Int      @id @default(autoincrement())
  url            String
  alt            String
  carousel_id    Int
  carousel_order Int      @default(0)
  created_at     DateTime @default(now())
  updated_at     DateTime @default(now()) @updatedAt
  Carousel       Carousel @relation(fields: [carousel_id], references: [id], onDelete: Cascade)

  @@map("carousel_image")
}

model ProductCategory {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  created_at  DateTime   @default(now())
  updated_at  DateTime   @default(now()) @updatedAt
  carousels   Carousel[]

  @@map("product_category")
}
